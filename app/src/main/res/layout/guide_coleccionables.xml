<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/guideColeccionablesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_transparent"
    android:clickable="true"
    android:focusable="true"
    android:visibility="visible">


    <android.widget.Button
        android:id="@+id/exitGuide"
        android:layout_width="117dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="159dp"
        android:background="@color/red"
        android:text="@string/salir_de_la_guia"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <android.widget.Button
        android:id="@+id/nextToResumen"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="50dp"
        android:background="@color/white"
        android:text="@string/siguiente"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textStep"
        android:layout_width="324dp"
        android:layout_height="204dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="239dp"
        android:alpha="0"
        android:background="@drawable/fondo_textview"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/coleccionables_espyro"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/pulseImage"
        android:layout_width="206dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-26dp"
        android:layout_marginBottom="-79dp"
        android:src="@drawable/pulse" />

</RelativeLayout>