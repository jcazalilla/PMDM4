<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guidePersonajesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_transparent"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone">


    <android.widget.Button
        android:id="@+id/exitGuide"
        android:layout_width="125dp"
        android:layout_height="46dp"
       android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/boton_exit"
        android:text="@string/salir_de_la_guia"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <android.widget.Button
        android:id="@+id/nextToMundos"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/boton_next"
        android:text="@string/siguiente"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textStep"
        android:layout_width="303dp"
        android:layout_height="158dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="359dp"
        android:layout_marginEnd="49dp"
        android:alpha="0"
        android:background="@drawable/fondo_textview"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/personajes_de_spyro"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/pulseImage"
        android:layout_width="206dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-50dp"
        android:layout_marginBottom="-72dp"
        android:src="@drawable/pulse" />


</RelativeLayout>

